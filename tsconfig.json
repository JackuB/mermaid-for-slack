{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es2019",
    "baseUrl": "src",
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["es2019"],
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,

    // Set `sourceRoot` to  "/" to strip the build path prefix
    // from generated source code references.
    // This improves issue grouping in Sentry.
    "sourceRoot": "/"
  },
  "exclude": ["__tests__", "tests", "node_modules", "dist"]
}
